{
  "author": "Jordan R A",
  "background": {
    "scripts": [
      "background_scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/furadder_icon_32.png",
    "default_popup": "popup/furadder.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "crystalsplitter@furadder.net"
    }
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open FurAdder Pop-Up"
    }
  },
  "content_scripts": [
    {
      "js": [
        "content_scripts/shared_utilities.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "content_scripts/twitter_handler.js"
      ],
      "matches": [
        "*://twitter.com/*",
        "*://mobile.twitter.com/*"
      ]
    },
    {
      "js": [
        "content_scripts/furbooru_handler.js"
      ],
      "matches": [
        "*://furbooru.org/*"
      ]
    },
    {
      "js": [
        "content_scripts/derpibooru_handler.js"
      ],
      "matches": [
        "*://derpibooru.org/*"
      ]
    },
    {
      "js": [
        "content_scripts/deviantart_handler.js"
      ],
      "matches": [
        "*://www.deviantart.com/*"
      ]
    },
    {
      "js": [
        "content_scripts/furaffinity_handler.js"
      ],
      "matches": [
        "*://www.furaffinity.net/*"
      ]
    },
    {
      "exclude_matches": [
        "*://twitter.com/*",
        "*://mobile.twitter.com/*",
        "*://derpibooru.org/*",
        "*://furbooru.org/*",
        "*://www.deviantart.com/*",
        "*://www.furaffinity.net/*"
      ],
      "js": [
        "content_scripts/universal_handler.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "description": "Allows easy image extraction and uploading to furbooru.org",
  "homepage_url": "https://github.com/CrystalSplitter/Furadder",
  "icons": {
    "32": "icons/furadder_icon_32.png",
    "48": "icons/furadder_icon_48.png"
  },
  "manifest_version": 2,
  "name": "FurAdder",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
  ],
  "version": "0.5.0",
  "web_accessible_resources": [
    "popup/js_src/*"
  ]
}